\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{stat}[theorem]{Statement}

\def\newthm#1#2{
	\begin{theorem}
	\label{#1} #2
	\end{theorem}}
\def\newlm#1#2{
	\begin{lemma}
	\label{#1} #2
	\end{lemma}}

\theoremstyle{definition}
\newtheorem{definition}{Definition}
\newtheorem{task}{Problem}


